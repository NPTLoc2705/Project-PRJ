<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AccountsLogin</servlet-name>
        <servlet-class>com.login.servlet.AccountsLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookDetail</servlet-name>
        <servlet-class>com.login.servlet.BookDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountsLogin</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountsSignUp</servlet-name>
        <servlet-class>com.login.servlet.AccountsSignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountsSignUp</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookUpload</servlet-name>
        <servlet-class>com.login.servlet.BookUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookUpload</servlet-name>
        <url-pattern>/Upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookDetail</servlet-name>
        <url-pattern>/Bookdetail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
